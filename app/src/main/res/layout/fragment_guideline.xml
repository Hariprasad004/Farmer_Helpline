<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guideline.GuidelineFragment"
    android:background="#81E809">

    <TextView
        android:id="@+id/guidelines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding"
        android:text="Guidelines"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/below_guidelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guidelines"
        android:layout_below="@+id/guidelines"
        android:lineSpacingExtra="5sp"
        android:padding="@dimen/padding"
        />




</RelativeLayout>